#!/usr/bin/env node
'use strict'

let cli = require('./dist'),
    minimist = require('minimist');

if (require.main === module) {
    var argv = (minimist)(process.argv.slice(2));

    if (argv._.length === 0) {
        console.log(
            'usage:  startjs <path to app> [--name <docker registry name>]');
    }

    cli(argv, (err) => {
        if (err) {
            console.error('ERROR: ' + err);
        }
    });
}
